---
const path = Astro.url.pathname;
const basePath = import.meta.env.BASE_URL || "/";
---

<header class="header">
  <div class="header__logo">
    <a href=`${basePath}${(path == basePath) ? "#" : ""}` data-astro-prefetch>
      <img
        class="image"
        src={`${basePath}assets/shared/shared/logo.svg`}
        alt="Logo"
      />
    </a>
    <div class="line"></div>
  </div>
  <nav class="header__nav">
    <a
      href=`${basePath}${(path == basePath) ? "#" : ""}`
      data-astro-prefetch
      class=`item ${(path == basePath) ? "active" : ""}`
    >
      <div class="text">
        <span class="text-preset-8-bold">00</span>
        <p class="text-preset-8">HOME</p>
      </div>
    </a>
    <a
      href={`${basePath}${path.startsWith(`${basePath}/destinations`) ? "#" : "/destinations/moon"}`}
      data-astro-prefetch
      class={`item ${path.startsWith(`${basePath}/destinations`) ? "active" : ""}`}
    >
      <div class="text">
        <span class="text-preset-8-bold">01</span>
        <p class="text-preset-8">DESTINATION</p>
      </div>
    </a>
    <a
      href={`${basePath}${path.startsWith(`${basePath}/crew`) ? "#" : "/crew/commander"}`}
      data-astro-prefetch
      class={`item ${path.startsWith(`${basePath}/crew`) ? "active" : ""}`}
    >
      <div class="text">
        <span class="text-preset-8-bold">02</span>
        <p class="text-preset-8">CREW</p>
      </div>
    </a>
    <a
      href={`${basePath}${path.startsWith(`${basePath}/technology`) ? "#" : "/technology/launch-vehicle"}`}
      data-astro-prefetch
      class={`item ${path.startsWith(`${basePath}/technology`) ? "active" : ""}`}
    >
      <div class="text">
        <span class="text-preset-8-bold">03</span>
        <p class="text-preset-8">TECHNOLOGY</p>
      </div>
    </a>
  </nav>
  <div class="header__mobile">
    <img
      src={`${basePath}assets/shared/icon-hamburger.svg`}
      alt="Hamburger Menu"
    />
  </div>
</header>
