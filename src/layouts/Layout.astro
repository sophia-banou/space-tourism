---
import Header from "../components/Header.astro";
import MobileMenu from "../components/MobileMenu.astro";
const { backgroundImage } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" defer></script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/assets/favicon-32x32.png" />
    <link rel="stylesheet" href="/styles/styles.css" />
    <link rel="stylesheet" href="/styles/styles-tablet.css" />
    <link rel="stylesheet" href="/styles/styles-mobile.css" />

    <!-- bellefair -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bellefair&display=swap"
      rel="stylesheet"
    />

    <!-- barlow condensed -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />

    <!-- barlow  -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Barlow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />

    <meta name="generator" content={Astro.generator} />
    <title>Frontend Mentor | Space tourism website</title>
  </head>
  <body>
    <div class="page-wrapper">
      <Header />
      <slot />
      <picture class="background">
        <source
          srcset=`/assets/${backgroundImage}-desktop.jpg`
          media="(min-width: 1025px)"
        />
        <source
          srcset=`/assets/${backgroundImage}-tablet.jpg`
          media="(max-width: 1024px)"
        />
        <source
          srcset=`/assets/${backgroundImage}-mobile.jpg`
          media="(max-width: 375px)"
        />
        <img src=`/assets/${backgroundImage}-desktop.jpg` alt="Background" />
      </picture>
    </div>
    <MobileMenu />
    <script>
      import "../scripts/scripts.js";
    </script>
  </body>
</html>
